master=yes
slave=no
local-port=54
api-key=**api_secret**
api=yes
config-dir=/etc/pdns
reuseport=yes
daemon=yes
gmysql-dbname=pdns
gmysql-host=127.0.0.1
gmysql-password=**db_password**
gmysql-user=pdns
gmysql-dnssec
guardian=yes
launch=gmysql
setgid=pdns
setuid=pdns
webserver-port=8081
webserver=yes
webserver-address=0.0.0.0
webserver-allow-from=127.0.0.1,notifly-1.example.io,notifly-2.example.io
allow-axfr-ips=127.0.0.1
only-notify=notifly-1.example.io,notifly-2.example.io
slave-renotify=yes
log-dns-details=yes
loglevel=10
disable-axfr=no
disable-tcp=no
# applies also to sending out notifications
slave-cycle-interval=1

default-ksk-algorithm=rsasha256
default-ksk-size=2048
